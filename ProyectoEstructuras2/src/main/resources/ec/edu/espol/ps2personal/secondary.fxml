<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ec.edu.espol.ps2personal.SecondaryController">
    <children>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Seleccionar archivos" />
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Preguntas" />
                  <Button fx:id="pregBtn" mnemonicParsing="false" onAction="#selectPreg" text="..." />
               </children>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Respuestas" />
                  <Button fx:id="respBtn" mnemonicParsing="false" onAction="#selectAns" text="..." />
               </children>
            </VBox>
         </children>
      </HBox>
        <Button fx:id="secondaryButton" onAction="#switchToGame" text="INICIAR" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
